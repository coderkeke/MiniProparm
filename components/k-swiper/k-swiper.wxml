<!--components/k-swiper/k-swiper.wxml-->
<swiper autoplay interval="1500" circular indicator-dots indicator-active-color="#ff5777" class="swiper">
  <block wx:for="{{list}}" wx:key="index">
    <swiper-item class="swiper-item">
      <image class="item-image" src="{{item.image}}" mode="widthFix"/>
    </swiper-item>
  </block>
</swiper>