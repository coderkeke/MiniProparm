<!--pages/home/home.wxml-->
<!-- 小程序的数据绑定 -->
<view>Hello {{name}}</view>
<view>年龄 {{age}}</view>

<view wx:for="{{students}}" wx:key="item">{{item.name}}--{{item.age}}</view>

<view>当前计数：{{counter}}</view>
<button size="mini" bindtap="handleBtnClick">+</button>
<button size="mini" bindtap="handleSubtraction">-</button>
<button open-type="getUserInfo" bindgetuserinfo="handleGetUserInfo">获取授权</button>

<open-data type="userNickName"></open-data>
<open-data type="userAvatarUrl"></open-data>


<view wx:for="{{list}}" wx:key="title">
  {{item.title}}
</view>